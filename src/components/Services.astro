---
const { ...props } = Astro.props;
import downArrow from "../assets/down-arrow.svg";
import site from "../data/site.json";
---

<div class="my-8">
    <h2 class="text-4xl text-center font-bold">We work with:</h2>
    <div class="grid grid-cols-2 md:grid-cols-3">
        {
            site.services.map((spec, index) => (
                <div class="">
                    <p class="text-2xl font-light text-center m-4 ">{spec}</p>
                </div>
            ))
        }
    </div>
</div>
