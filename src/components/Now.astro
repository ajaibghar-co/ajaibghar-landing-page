---
import Head from './Head.astro';
const { ...props } = Astro.props;
import downArrow from '../assets/down-arrow.svg';
import site from '../data/site.json';
const year = new Date().getFullYear()
---

<h2 class="text-3xl px-4 py-2 text-center">Now </h2>
<p class="px-4 py-2 text-center">What we are up to this year

   <span class="">{year}</span>
</p>

<div class="grid grid-cols-2 mx-auto md:w-1/2">
   {site.now.map((spec, index) => <div class="bg-yellow-400 mx-2 my-3 rounded-sm">
         <a class="" href={spec.link}>
            <div class="rounded-xs h-full p-4 text-center flex flex-col justify-center">{spec.text}</div>
         </a>
      </div>)}
</div>