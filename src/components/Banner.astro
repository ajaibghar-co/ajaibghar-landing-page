---
const { ...props } = Astro.props;
import downArrow from "../assets/down-arrow.svg";
import site from "../data/site.json";
import Ascii from "../components/Ascii.astro";
const { content1, content2 } = Astro.props;
import { Image } from "astro:assets";
---

<main>
    <div id="container" class="h-screen relative">
        <Ascii />
        <div class="absolute top-56 mx-8 sm:mx-8 md:mx-32">
            <div
                id="organicgroup"
                class="z-10 text-center flex flex-col space-y-10"
            >
                <h1
                    id="organic"
                    class="z-10 text-3xl md:text-6xl font-bold text-white"
                >
                    <span class="">
                        {content1}
                    </span>
                </h1>
                <h2
                    class="z-30 mx-auto text-white text-xl w-full lg:text-3xl lg:w-2/3 font-regular"
                >
                    <span class="">
                        {content2}
                    </span>
                </h2>
            </div>
            <div class="mt-20 mx-auto place-self-end">
                <Image
                    class="w-auto h-10 animate-bounce"
                    src={downArrow}
                    alt="Next Project"
                    loading="eager"
                />
            </div>
        </div>
    </div>
</main>
