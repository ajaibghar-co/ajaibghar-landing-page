---
import "@splidejs/splide/css";
import { SplideExtension, SplideSlide } from "astro-splide";
import type { Options } from "@splidejs/splide";
const options: Options = {
    type: "loop",
    drag: "free",
    focus: "center",
    perPage: 3,
    autoScroll: {
        speed: 3,
    },
};
import "../styles/splidestyle.css";
import site from "../data/site.json";
import CustomCard from "./CustomCard.astro";
---

<SplideExtension
    options={options}
    class="not-content"
    options={{
        // check for options at https://splidejs.com/guides/options/
        type: "loop", // type of the carousel
        autoplay: true, // activate autoplay
        interval: 1000, // autoplay interval in milliseconds
        pauseOnHover: false, // do not pause autoplay on mouseover
    }}
>
    {
        site.imageGallery.map((spec, index) => (
            <SplideSlide class="h-dvh   ">
                <CustomCard imagePath={spec} altText="bannerimages" />
            </SplideSlide>
        ))
    }
</SplideExtension>

<script>
    import { AutoScroll } from "@splidejs/splide-extension-auto-scroll";
    import { initSplideExtension } from "astro-splide/js/splideExtensionUtils";
    initSplideExtension({ AutoScroll });
</script>
