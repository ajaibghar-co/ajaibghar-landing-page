---
import Head from './Head.astro';
const { ...props } = Astro.props;
import downArrow from '../assets/down-arrow.svg';
import site from '../data/site.json';
import { Image } from "astro:assets";
import CustomCard from './CustomCard.astro';
---

<h2 class="text-3xl px-4 py-2 text-center">What happened in past years</h2>
<div class="grid grid-cols-2  mx-auto md:w-1/3">
    {site.previousyears.map((spec, index) => 
    <div class="flex flex-col justify-center rounded-md">
        <a href={spec.link} target="_blank" class="py-3 ">
        
            <img src={spec.featImg} alt="year highlights" class="mx-auto w-48 h-48  object-cover p-2 md:p-0"/>
            <h2 class="text-center text-3xl mt-3">{spec.year}</h2> 
        </a>
    </div>
    )}

</div>