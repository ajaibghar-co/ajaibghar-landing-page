---
const { ...props } = Astro.props;
import downArrow from "../assets/down-arrow.svg";
import site from "../data/site.json";
import CustomCard from "../components/CustomCard.astro";
import { Image } from "astro:assets";
---

<h2 class="text-4xl p-4 text-center font-bold">What happened in past years</h2>
<div class="flex flex-col-reverse mx-auto text-black md:grid md:grid-cols-2 md:gap-2 lg:grid lg:grid-cols-2 lg:gap-3 xl:grid xl:grid-cols-3 xl:gap-3 2xl:grid 2xl:grid-cols-3 2xl:gap-3 w-1/2 ">
    {
      site.previousyears.map((spec, index) =>
        <a href={spec.link} target="_blank" class="p-4 mx-auto object-contain">
            <!-- <img src={spec.featImg} alt="year highlights" class="mx-auto w-48 h-48  object-cover p-2 md:p-0"/> -->
            <CustomCard imagePath={spec.featImg} altText="logos"/>

            <h2 class="text-center text-4xl   font-semibold">{spec.year}</h2>
        </a>
    )}

</div>
